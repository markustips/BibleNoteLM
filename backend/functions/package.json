{
  "name": "biblenotelm-functions",
  "version": "1.0.0",
  "description": "BibleNoteLM Cloud Functions - Backend middleware for security, subscriptions, and privacy",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "test": "jest"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^4.6.0",
    "stripe": "^14.11.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/jest": "^29.5.11",
    "typescript": "^5.3.3",
    "firebase-functions-test": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "private": true
}
